{
    "entryPoints": [
        //TO DO: Add Parsers when they work again
        "node_modules/@awayjs/core",
        "node_modules/@awayjs/graphics",
        "node_modules/@awayjs/materials",
        "node_modules/@awayjs/renderer",
        "node_modules/@awayjs/scene",
        "node_modules/@awayjs/stage",
        "node_modules/@awayjs/view",
        //"node_modules/@awayjs/parsers",
    ],
    "name": "AwayJS",
    "entryPointStrategy": "packages",
    "includeVersion": false,
    "out": "./bin",
    "readme": "includes/home.md",

    "packageOptions": {
      "includeVersion": true,
      "entryPoints": ["index.ts"],
      "exclude": [
        "node_modules",
        "dist",
        "tests"
      ],
      //This is needed on windows 
      "readme": "README.md"
    },

    "visibilityFilters": {
            "external": true,
    },
    "markdownItOptions": {
        "html": true,
        "breaks": true
    },

    "logLevel": "Verbose"
}